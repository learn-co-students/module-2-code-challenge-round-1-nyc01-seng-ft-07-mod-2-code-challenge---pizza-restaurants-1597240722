<h1>Restaurant's New Pizza Format</h1>

<% if flash[:my_error] %>
  <% flash[:my_error].each do |error| %>
    <%= error %>
  <% end %>
<%end%>

<%= form_for @restaurantpizza do |f| %>
  <%= f.label :restaurant_id %>
  <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %>

  <%= f.label :pizza_id %>
  <%= f.collection_select :pizza_id, Pizza.all, :id, :name %>

  <%= f.label :price %>
  <%= f.number_field :price, min: 1, max: 30%>

  <%= f.submit %>

<%end%>
