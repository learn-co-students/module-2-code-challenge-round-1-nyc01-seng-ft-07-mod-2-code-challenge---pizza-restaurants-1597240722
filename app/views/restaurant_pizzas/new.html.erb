<h1>RestaurantPizza Form</h1>

<% if flash[:my_error] %>
    <% flash[:my_error].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>


<%= form_for @restaurant_pizza do |f| %>
    <%= f.label :pizza_id %>
    <%= f.collection_select :pizza_id, @pizzas, :id, :name %>
    <br>
    <br>
    <%= f.label :restaurant_id %>
    <%= f.collection_select :restaurant_id, @restaurants, :id, :name %>
    <br>
    <br>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <br>
    <br>
    <%= f.submit %>    
<% end %>
  