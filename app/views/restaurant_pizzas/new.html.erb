<h1>New Offer Creation!</h1>
<p> Please enter your restaurant, pizza, and price below.</p></p>

<% if flash[:errors]%>
<% flash[:errors].each do |error| %>
<p style = "color: red"><%=error%></p>
<%end%>
<%end%>

<%= form_for @restaurant_pizza do |f|%>

<%= f.label :pizza %>
<%= f.collection_select :pizza_id, Pizza.all, :id, :name%>

<%= f.label :restaurant %>
<%= f.collection_select :restaurant_id, Restaurant.all, :id, :name%>

<%= f.label :price%>
<%= f.number_field :price%>

<%=f.submit%>
<%end%>