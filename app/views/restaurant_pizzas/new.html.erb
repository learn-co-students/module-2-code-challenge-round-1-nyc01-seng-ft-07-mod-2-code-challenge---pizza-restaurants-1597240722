  <%= f.label "Restaurant:"%>
  <%= f.collection_select :restaurant_id, @restaurants, :id, :name %>
  <br><br>
  <%= f.label "Price:" %>
  <%= f.number_field :price %>
  <br><br>
  <%= f.submit "Add Pizza to the Menu" %>
<% end %>