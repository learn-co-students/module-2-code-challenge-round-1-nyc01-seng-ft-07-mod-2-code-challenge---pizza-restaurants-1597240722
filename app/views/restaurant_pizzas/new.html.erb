<h1> Add Pizza to Restaurant </h1>

<% if flash[:my_errors]%>
    <% flash[:my_errors].each do |error| %>
        <%= error %>
    <%end%>
<%end%>

<%= form_for @restaurantpizza do |f| %>
    <%= f.label "Choose a Pizza:" %>
    <%= f.collection_select :pizza_id, @pizzas, :id, :name %>
    <%= f.label "Choose a Restaurant:" %>
    <%= f.collection_select :restaurant_id, @restaurants, :id, :name %>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <%= f.submit %>
<% end %>
  