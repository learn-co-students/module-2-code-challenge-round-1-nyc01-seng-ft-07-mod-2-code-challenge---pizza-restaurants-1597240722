<% if flash[:my_errors] %>
<%= flash[:my_errors] do |error| %>
<%= error %>
    <%end%>
<%end%>

<%= form_for @restaurant_pizza do |f| %>

<p> <%= f.label :pizza_id %> </p>
<p> <%= f.collection_select :pizza_id, Pizza.all, :id, :name %> </p>

