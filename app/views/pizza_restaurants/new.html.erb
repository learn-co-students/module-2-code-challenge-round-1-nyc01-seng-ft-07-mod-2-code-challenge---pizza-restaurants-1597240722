<h1>New Pizza Restaurant Form!</h1>
<h3>Let's Make Some Pizzas!</h3>

<% if flash[:errors] %>
    <%flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for(@pizza_restaurant) do |pr_builder| %>
    <%= pr_builder.collection_select :restaurant_id, @restaurants, :id, :name %><br>

    <%= pr_builder.collection_select :pizza_id, @pizzas, :id, :name %><br>

    <%= pr_builder.label :price %><br>
    <%= pr_builder.number_field :price %><br>

    <%= pr_builder.submit "Put this thing on the menu!" %>
<% end %>