<h1> New Form </h1>



<%= form_for @pizza_restaurant do |f| %>
    <%= f.label :Pizza %>
    <%= f.collection_select :pizza_id, Pizza.all, :id, :name %>

    <%= f.label :Restaurant %>
    <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.submit %>
<% end %>